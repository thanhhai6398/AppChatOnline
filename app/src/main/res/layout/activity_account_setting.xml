<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linnearSetting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/nav_color"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tùy chọn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linnearSetting"
        android:padding="10dp">

        <TextView
            android:id="@+id/infoAccount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_profile"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:text="Thông tin tài khoản"
            android:textColor="@color/black"
            android:textSize="23sp"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9C9090"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <!--*******Edit Profile**********-->
        <TextView
            android:id="@+id/editAccount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_edit_profile"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:text="Chỉnh sửa thông tin"
            android:textColor="@color/black"
            android:textSize="23sp"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9C9090"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_logout_exit"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:text="Đăng xuất"
            android:textColor="@color/black"
            android:textSize="23sp"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9C9090"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>



</RelativeLayout>